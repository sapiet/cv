<header class="s-header">
    <div class="row s-header__nav-wrap">
        <nav class="s-header__nav">
            <ul>
                <li class="current"><a class="smoothscroll" href="#hero">Accueil</a></li>
                <li><a class="smoothscroll" href="#about">À propos</a></li>
                <li><a class="smoothscroll" href="#resume">Expériences</a></li>
                <li><a class="smoothscroll" href="#portfolio">Portfolio</a></li>
                <li><a class="smoothscroll" href="#testimonials">Recommandations</a></li>
                <li><a href="{{ path('cv') }}" target="_blank">Curriculum vitae</a></li>
            </ul>
        </nav>
    </div>

    <a class="s-header__menu-toggle" href="#0" title="Menu">
        <span class="s-header__menu-icon"></span>
    </a>
</header>

<section id="hero" class="s-hero target-section">
    <div class="s-hero__bg rellax" data-rellax-speed="-7" style="background-image:url({{ asset('assets/images/background.jpg') }})"></div>

    <div class="row s-hero__content">
        <div class="column">
            <div class="s-hero__content-about">
                <h1>{{ profile.getFullname() }}</h1>

                <h3>
                    {{ profile.getShortDescription() | raw }}
                </h3>

                <div class="s-hero__content-social">
                    {% for social in profile.getSocials() %}
                        <a href="{{ social.getLink() }}" title="{{ social.getTitle() }}" target="_blank">
                            <i class="{{ social.getClassname() }}" aria-hidden="true"></i>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="s-hero__scroll">
        <a href="#about" class="s-hero__scroll-link smoothscroll">
            <span class="scroll-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill:rgba(0, 0, 0, 1);transform:;-ms-filter:"><path d="M18.707 12.707L17.293 11.293 13 15.586 13 6 11 6 11 15.586 6.707 11.293 5.293 12.707 12 19.414z"></path></svg>
            </span>
            <span class="scroll-text">Défilez vers le bas</span>
        </a>
    </div>
</section>
