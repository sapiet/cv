<section id="testimonials" class="s-testimonials target-section">
    <div class="s-testimonials__bg"></div>

    <div class="row s-testimonials__header">
        <div class="column large-12">
            <h3>Ils me font confiance</h3>
        </div>
    </div>

    <div class="row s-testimonials__content">
        <div class="column">
            <div class="swiper-container testimonial-slider">
                <div class="swiper-wrapper">
                    {% for recommendation in profile.orderedRecommendations %}
                        <div class="testimonial-slider__slide swiper-slide">
                            <div class="testimonial-slider__author">
                                {% if recommendation.picture starts with 'http' %}
                                    {% set url = recommendation.picture %}
                                {% else %}
                                    {% set url = asset('f/r/' ~ recommendation.picture) %}
                                {% endif %}
                                <img
                                        src="{{ url }}"
                                        alt="{{ recommendation.firstname }} picture"
                                        class="testimonial-slider__avatar"
                                >
                                <cite class="testimonial-slider__cite">
                                    <strong>{{ recommendation.firstname }}</strong>
                                    <span>{{ recommendation.company }}</span>
                                </cite>
                            </div>
                            <p>
                                {{ recommendation.message | nl2br }}
                            </p>
                        </div>
                    {% endfor %}
                </div>

                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
</section>
