<section id="about">
    <div class="row">
        <div class="three columns">
            <img class="profile-pic"  src="images/profilepic.jpg" alt="" />
        </div>

        <div class="nine columns main-col">
            <h2>À propos</h2>

            <p>
                {{ profile.getLongDescription() }}
            </p>

            <div class="row">
                <div class="columns contact-details">
                    <h2>Mes coordonnées</h2>
                    <p class="address">
                        <span>
                            {{ profile.getFullname() }}
                        </span>
                        <br>
                        <span>
                            {{ profile.getAddress() }}
                            <br>
                            {{ profile.getZipcode() }}
                            {{ profile.getCity() }}
                        </span>
                        <br>
                        <span>
                            {{ profile.getMobile() }}
                        </span>
                        <br>
                        <span>
                            {{ profile.getEmail() }}
                        </span>
                    </p>
                </div>

                <div class="columns download">
                    <p>
                        <a href="#" class="button">
                            <i class="fa fa-download"></i>
                            Faire downloader un truc ?
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
