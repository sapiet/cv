<section id="resume">
    <div class="row education">
        <div class="three columns header-col">
            <h1><span>Expérience</span></h1>
        </div>

        <div class="nine columns main-col">
            {% for experience in profile.getExperiences() %}
                <div class="row item">
                    <div class="twelve columns">
                        <h3>{{ experience.getCompany() }}</h3>
                        <p class="info">
                            {{ experience.getJobName() }}
                            <span>&bull;</span>
                            <em class="date">
                                Depuis {{ experience.getStartDate()|date('d/m/Y') }}
                            </em>
                        </p>
                        <p>
                            {{ experience.getDescription() }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row work">
        <div class="three columns header-col">
            <h1><span>Formation</span></h1>
        </div>
        <div class="nine columns main-col">
            {% for formation in profile.getFormations() %}
                <div class="row item">
                    <div class="twelve columns">
                        <h3>{{ formation.getPlace() }}</h3>
                        <p class="info">
                            {{ formation.getDegree() }}
                            <span>&bull;</span>
                            <em class="date">
                                Depuis {{ formation.getStartDate()|date('d/m/Y') }}
                            </em>
                        </p>
                        <p>
                            {{ formation.getDescription() }}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row skill">
        <div class="three columns header-col">
            <h1><span>Compétences</span></h1>
        </div>

        <div class="nine columns main-col">
            <p>
                Que foutre içi ?
            </p>

			<div class="bars">
                <ul class="skills">
                    {% for skill in profile.getSkills() %}
                        <li>
                            <span class="bar-expand" style="width:{{ skill.getPercentage() }}%"></span>
                            <em>
                                {{ skill.getName() }}
                            </em>
                        </li>
                    {% endfor %}
				</ul>
            </div>
        </div>
    </div>
</section>
